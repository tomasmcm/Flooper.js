{
  "name": "flooper",
  "version": "0.0.5",
  "description": "Flex order looper. Uses flex order attribute to loop a list of items instead of duplication or expensive multiItem position calculations.",
  "main": "index.js",
  "scripts": {
    "start": "gulp",
    "start:production": "gulp --env production",
    "build:production": "gulp build --env production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy:add": "git add -f \"public/*\"",
    "deploy:msg": "git commit -m \"Release with version $npm_package_version at $(date) \"",
    "deploy:gh": "git push origin :gh-pages && git subtree push --prefix $npm_package_flooper_devPaths_site_destName origin gh-pages",
    "deploy:reset": "git reset HEAD^ && git checkout -- dist/*",
    "deploy:site": "npm run build:production && npm run deploy:add && npm run deploy:msg && npm run deploy:gh && npm run deploy:reset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whitesmith/Flooper.js.git"
  },
  "keywords": [
    "Flex",
    "Order",
    "Looper"
  ],
  "author": [
    "Tomás Marques | https://github.com/tomasmcm | @tomasmcm",
    "Renato de Leão | https://github.com/renatodeleao | @renatodeleao"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/whitesmith/Flooper.js/issues"
  },
  "homepage": "https://github.com/whitesmith/Flooper.js#readme",
  "devDependencies": {
    "babel-core": "^5.8.23",
    "babel-loader": "^5.3.2",
    "babel-runtime": "^5.8.20",
    "browser-sync": "^2.9.1",
    "coffee-loader": "^0.7.2",
    "coffee-script": "^1.9.3",
    "del": "^3.0.0",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^3.0.1",
    "gulp-data": "^1.2.0",
    "gulp-gh-pages": "^0.5.4",
    "gulp-jade": "^1.1.0",
    "gulp-json-editor": "^2.2.1",
    "gulp-load-plugins": "^1.0.0-rc.1",
    "gulp-notify": "^3.0.0",
    "gulp-plumber": "^1.0.1",
    "gulp-sass": "^2.0.4",
    "gulp-size": "^2.1.0",
    "gulp-uglify": "^1.4.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "mappy-breakpoints": "^0.2.3",
    "minimist": "^1.2.0",
    "node-libs-browser": "^0.5.2",
    "run-sequence": "^1.1.2",
    "webpack": "^1.12.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.20.0"
  },
  "dependencies": {
    "animejs": "^2.2.0",
    "normalize.css": "^7.0.0",
    "scrollama": "^0.6.1"
  },
  "flooper": {
    "devPaths": {
      "lib": {
        "src": "./lib",
        "dest": "./dist"
      },
      "site": {
        "src": "./site",
        "dest": "./public",
        "destName": "public"
      }
    },
    "devPaths": {
      "lib": {
        "src": "./lib",
        "dest": "./dist"
      },
      "site": {
        "src": "./site",
        "dest": "./public",
        "destName": "public"
      }
    },
  }
}
